<!-- 
  Purpose: Display details of a specific asset based on its ID.
  Note: Manufactured Date might be simplified to year-only in the future.
-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= asset.name %> Details</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <h1><%= asset.name %> Details</h1>

  <ul>
    <li>Model: <%= asset.category %></li>
    <li>Make: <%= asset.make %></li>
    <li>Condition: <%= asset.condition %></li>
    <li>Asset Tag: <%= asset.assetTag %></li>
    <li>Manufactured Year: <%= asset.manufacturedDate?.getFullYear() %></li>
  </ul>

  <a href="/portal">Back to Portal</a> |
  <a href="/portal/<%= asset._id %>/edit">Edit</a>

</body>
</html>
